.wrapper_with_padding
	#notes.clearfix
		- if current_user.admin?
			%H2 you are admin
		- unless @notes.blank?
		

		
			- @notes.each do |note|
				%a{ href: (url_for [note])}
					.note
						%p.title= note.title
						%p.date= time_ago_in_words(note.created_at)
		- else
			%h2 New Ad
			%p It appears you haven't created any Adverts yet... Lets fix that. Why don't you go ahead and create a new Ad.
			%button= link_to "New Ad", new_note_path